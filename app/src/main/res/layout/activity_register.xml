<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Register"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/register_page"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"/>


        <TextView
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            style="@style/viewParent"
            android:text="Register"
            android:textSize="@dimen/headerTextSize"
            android:textColor="@color/blackTextColor"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout

            style="@style/parent.TextLayout"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputName"
                style="@style/modifiedEditText"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:hint="Name"
                android:background="@drawable/edt_background"
                android:drawableLeft="@drawable/user_clip"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:id="@+id/namesyntax"
            android:layout_marginLeft="5dp"
            />
        <com.google.android.material.textfield.TextInputLayout

            style="@style/parent.TextLayout"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                style="@style/modifiedEditText"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:hint="Email Address"
                android:background="@drawable/edt_background"
                android:drawableLeft="@drawable/user_clip"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:id="@+id/email_syntax"

            android:layout_marginLeft="5dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent.TextLayout"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputPhoneReg"
                style="@style/modifiedEditText"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:hint="Phone Number"
                android:background="@drawable/edt_background"
                android:drawableLeft="@drawable/user_clip"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:id="@+id/phonesyntax"
            android:layout_marginLeft="5dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPhone"
            style="@style/parent.TextLayout"
            android:layout_marginTop="@dimen/signup_text_margin_top"/>



        <com.google.android.material.textfield.TextInputLayout
                        style="@style/parent.TextLayout"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                style="@style/modifiedEditText"
                android:hint="Password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:background="@drawable/edt_background"
                android:drawableLeft="@drawable/lock_clip"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:id="@+id/passwordsyntax"
                />



        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent.TextLayout"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmPassword"
                style="@style/modifiedEditText"
                android:hint=" Confirm Password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:background="@drawable/edt_background"
                android:drawableLeft="@drawable/lock_clip"/>



        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:id="@+id/confirmpasswordsyntax"
            android:layout_marginLeft="5dp"
            />

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"></ProgressBar>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_button"
            android:id="@+id/button_register"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/blackTextColor"
            android:textSize="15sp"
            android:text="Already Have an Account?\nLogin Now."
            android:id="@+id/loginnow"/>



    </LinearLayout>

</LinearLayout>
